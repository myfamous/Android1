<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:app="http://schemas.android.com/apk/res-auto" 
	android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingEnd="15dp"
	android:paddingStart="15dp"
	android:paddingTop="15dp"
		android:background="?attr/colorFill"
		android:orientation="vertical">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center_vertical">

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
		android:id="@+id/mainLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:weightSum="4.2"
			android:gravity="center"
			android:layout_marginStart="12dp"
			android:layout_marginBottom="15dp">
			<LinearLayout
                android:layout_width="wrap_content"
				android:layout_weight="1.64"
                android:layout_height="wrap_content">

				<ImageView
				android:id="@+id/profileimage_head"
				android:scaleType="centerCrop"
				android:layout_width="70dp"
				android:layout_height="70dp"
					android:layout_marginStart="7dp"
				android:gravity="center_vertical"
				
				app:layout_collapseMode="parallax" />
			</LinearLayout>
				
			<LinearLayout
			android:id="@+id/CountFollowersLayout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical"
			android:gravity="center_horizontal">

			<TextView
				android:id="@+id/CountFollowers"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0"
					android:textStyle="bold"
				android:textSize="19sp"/>

			<TextView
				android:id="@+id/txtFollowers"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/Lbl_Followers"
				android:textColor="#000"
				android:textSize="13sp"/>

			

		</LinearLayout>

		<LinearLayout
			android:id="@+id/CountLikesLayout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical"
			android:gravity="center_horizontal">

			<TextView
				android:id="@+id/CountFamous"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0"
					android:textColor="#003ed9"
					android:textStyle="bold"
				android:textSize="19sp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/Lbl_myFamous"
				android:textColor="#003ed9"
				android:textSize="13sp"/>

		</LinearLayout>

				<LinearLayout
			android:id="@+id/CountFollowingLayout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical"
			android:gravity="center_horizontal">

			
			<TextView
				android:id="@+id/CountFollowing"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0"
					android:textStyle="bold"
				android:textSize="19sp"/>

				<TextView
				android:id="@+id/txtFollowing"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/Lbl_Following"
				android:textColor="#000"
				android:textSize="13sp"/>


		</LinearLayout>
			</LinearLayout>
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:weightSum="2"
			android:orientation="horizontal">
				<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="12dp"
				android:layout_weight="1.1"
				android:gravity="center_vertical"
				android:orientation="vertical">
		
				<WoWonder.Helpers.Fonts.TextViewWithImages
					android:id="@+id/name_profile"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:drawablePadding="4dp"
					android:textColor="#000"
					android:textSize="15sp"
					android:textStyle="bold"/>
				<TextView
					android:id="@+id/username_profile"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="13sp"
					android:textColor="#000"/>
			</LinearLayout>
				<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
				android:layout_weight="0.9"
				android:layout_marginStart="10dp"
			android:orientation="horizontal">
			<Button
				android:id="@+id/btnEdit"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="35dp"
				android:background="@drawable/message_outline_button2"
				android:textSize="12sp"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#333"
				android:text="@string/Lbl_publickfiguer"/>
			<Space
				android:layout_width="13dp"
				android:layout_height="wrap_content"/>
			<Button
				android:id="@+id/btnWallet"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="35dp"
				android:background="@drawable/message_outline_button3"
				android:textSize="12sp"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#333"
				android:text="@string/Lbl_Wallet"/>
		</LinearLayout>
			</LinearLayout>

		
		</LinearLayout>
	
	</LinearLayout>