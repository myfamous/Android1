<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="?attr/colorFill"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4.2"
        android:gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1.64"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profileimage_head"
                android:scaleType="centerCrop"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="7dp"
                android:gravity="center_vertical"
                app:layout_collapseMode="parallax" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/CountFollowersLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/CountFollowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/txtFollowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_Followers"
                android:textColor="#000"
                android:textSize="13sp"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/CountLikesLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/CountFamous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#003ed9"
                android:textStyle="bold"
                android:textSize="19sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_myFamous"
                android:textColor="#003ed9"
                android:textSize="13sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/CountFollowingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <TextView
                android:id="@+id/CountFollowing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/txtFollowing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_Following"
                android:textColor="#000"
                android:textSize="13sp"/>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/btnFollow"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardElevation="7dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/accent"
            android:outlineAmbientShadowColor="@color/accent"
            android:outlineSpotShadowColor="@color/accent">
            <TextView
                android:id="@+id/followTxtold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="@color/gnt_white"
                android:text="@string/Lbl_Follow"/>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btnMessageold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/follow_button_profile_friends"
            android:textSize="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/accent"
            android:text="@string/Lbl_Message"/>
        <LinearLayout
            android:id="@+id/ll_stopNotify"
            android:layout_width="35dp"
            android:layout_height="39dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="gone"
            android:background="@drawable/follow_colored_button"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_stopNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:tint="@color/gnt_white"
                android:src="@drawable/ic_notifications_on_vector"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_live"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="gone"
            android:background="@drawable/round_gradient"
            android:paddingStart="7dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:src="@drawable/icon_video_camera"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="@string/Lbl_Live"
                android:textColor="@color/gnt_white"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1.1"
            android:gravity="center_vertical"
            android:orientation="vertical">
             <LinearLayout
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
            android:orientation="horizontal">
            <WoWonder.Helpers.Fonts.TextViewWithImages
                android:id="@+id/name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:textColor="#000"
                    android:text="tetret"
                android:textSize="15sp"
                android:textStyle="bold"/>
                <ImageView
                     android:id="@+id/imgfame"
                    android:layout_width="12dp"
                    android:src="@drawable/ic_famous_diamond"                    android:layout_marginStart="4dp"
                android:layout_height="12dp"
                />
                 </LinearLayout>
            <TextView
                android:id="@+id/username_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.9"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/message_outline_button2"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#333"
                android:text="@string/Lbl_publickfiguer"/>
            <Space
                android:layout_width="13dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnMessage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/message_outline_button2"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#333"
                android:text="@string/Lbl_Message"/>
        </LinearLayout>
    </LinearLayout>
     <WoWonder.Library.Anjo.SuperTextLibrary.SuperTextView
        android:id="@+id/tv_aboutdescUser"
        android:layout_width="match_parent"
        android:text="bio"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:visibility="visible"
        android:id="@+id/layoutsocial"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="19dp">
        <TextView
            android:id="@+id/txtinsta"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:text="T"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="47sp"
            android:gravity="center" />
        <ImageView
            android:id="@+id/txttiktok"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="6dp"
            android:padding="2dp"
            android:src="@drawable/ic_tiktok"
            android:layout_weight="1"
            android:gravity="center" />
        <TextView
            android:id="@+id/txtsnapchat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:text="T"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="47sp"
            android:gravity="center" />
        <TextView
            android:id="@+id/txtfb"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:text="T"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="47sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/txttwitter"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:text="T"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="47sp"
            android:gravity="center" />
        <TextView
            android:id="@+id/txtyoutube"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:text="T"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="47sp"
            android:gravity="center" />

    </LinearLayout>
</LinearLayout>